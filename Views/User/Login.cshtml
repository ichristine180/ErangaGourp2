@model E_ranga.Models.UserLogin
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@{
    ViewData["Title"] = "Login Page";
}
<div class="container justify-content-center align-items-center">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="text-center mb-3">Login</h2>
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                         <div class="d-flex justify-content-center">
                             <button type="submit" class="btn btn-primary btn-block mt-5 mb-5 d-flex align-items-center p-2">Login</button>
                        </div>
                        <div class="text-center mt-2">
                            <a asp-controller="User" asp-action="Register">Don't have an account? Register</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
